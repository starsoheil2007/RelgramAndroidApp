<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.relgram.app.app.view_models.GalleryFragmentViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/profileAvatar"
                imageUrlCircle="@{viewModel.getFullAvatarUrl()}"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <com.relgram.app.app.library.PersianTextView
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/text_size_standard"
                android:text="برای تغییر آواتار روی آن بزنید ."
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/addImage"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_background"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/addImage"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image1"
                    imageUrl="@{viewModel.fullImage1Url}"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter" />

                <com.relgram.app.app.library.IconTextView
                    android:id="@+id/deleteImage1"
                    android:layout_width="40dp"
                    android:tag="@{viewModel.fullImage1Id}"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_delete_image_background"
                    android:gravity="center"
                    android:text="@string/iconDelete"
                    android:textColor="@color/colorCount"
                    android:textSize="@dimen/text_size_xxxxlarge" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image2"
                    imageUrl="@{viewModel.fullImage2Url}"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop" />

                <com.relgram.app.app.library.IconTextView
                    android:id="@+id/deleteImage2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tag="@{viewModel.fullImage2Id}"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_delete_image_background"
                    android:gravity="center"
                    android:text="@string/iconDelete"
                    android:textColor="@color/colorCount"
                    android:textSize="@dimen/text_size_xxxxlarge" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image3"
                    imageUrl="@{viewModel.fullImage3Url}"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY" />

                <com.relgram.app.app.library.IconTextView
                    android:id="@+id/deleteImage3"
                    android:layout_width="40dp"
                    android:tag="@{viewModel.fullImage3Id}"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_delete_image_background"
                    android:gravity="center"
                    android:text="@string/iconDelete"
                    android:textColor="@color/colorCount"
                    android:textSize="@dimen/text_size_xxxxlarge" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image4"
                    imageUrl="@{viewModel.fullImage4Url}"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY" />

                <com.relgram.app.app.library.IconTextView
                    android:id="@+id/deleteImage4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tag="@{viewModel.fullImage4Id}"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_delete_image_background"
                    android:gravity="center"
                    android:text="@string/iconDelete"
                    android:textColor="@color/colorCount"
                    android:textSize="@dimen/text_size_xxxxlarge" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image5"
                    imageUrl="@{viewModel.fullImage5Url}"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY" />

                <com.relgram.app.app.library.IconTextView
                    android:id="@+id/deleteImage5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tag="@{viewModel.fullImage5Id}"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_delete_image_background"
                    android:gravity="center"
                    android:text="@string/iconDelete"
                    android:textColor="@color/colorCount"
                    android:textSize="@dimen/text_size_xxxxlarge" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</layout>