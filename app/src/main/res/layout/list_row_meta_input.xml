<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.relgram.app.app.view_models.ListMetaDataViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/meta_back"
        android:padding="3dp">

        <com.relgram.app.app.library.PersianTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@{viewModel.meta.title}"
            android:textColor="@color/editMetaTitleColor"
            android:textSize="@dimen/text_size_large" />

        <com.relgram.app.app.library.PersianEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/title"
            android:padding="3dp"
            android:background="@drawable/login_edit_txt_background"
            android:hint="@{viewModel.meta.values[0].title}"
            android:orientation="vertical">

        </com.relgram.app.app.library.PersianEditText>
    </RelativeLayout>
</layout>