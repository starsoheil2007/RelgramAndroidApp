<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.Primary">
        <item name="colorAccent">@color/colorPrimaryDark</item> <!-- Whatever color you want-->
    </style>


    <style name="DividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="FormEditLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">top|bottom|center_vertical|fill_vertical|center|fill</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditTextFormField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@drawable/register_edit_txt_background</item>
    </style>


    <style name="SpinnerFormField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@drawable/register_edit_txt_background</item>
    </style>

    <style name="SpinnerSearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@drawable/register_edit_txt_background</item>
    </style>

    <style name="spinnerArrowSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:text">@string/iconArrowDownSpinner</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinnerArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:text">@string/iconArrowDownSpinner</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAreaFormField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:lines">5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">right|top</item>
        <item name="android:background">@drawable/register_edit_txt_background</item>
    </style>

    <style name="TextAreaFormFieldContact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:lines">10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">right|top</item>
        <item name="android:background">@drawable/register_edit_txt_background</item>
    </style>

    <style name="inputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>
